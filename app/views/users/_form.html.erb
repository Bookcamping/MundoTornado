<%= simple_form_for user do |form| %>
  <%= form.input :name %>
  <%= form.input :email %>
  <%= form.input :password %>
  <%= form.input :password_confirmation %>
  <%= form.input :admin if current_user && current_user.admin? %>
  <%= form.submit user.new_record? ? 'Dar de alta' : 'Guardar' %>
<% end %>

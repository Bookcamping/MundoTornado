<%= title 'Grupos' %>
<div class="actions">
  <%= link_to 'Nuevo grupo', new_group_path if can? :create, Group %>
</div>

<table class="table">
  <% groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td class="">
        <%= link_to 'Editar', [:edit, group] if can? :update, group %>
      </td>
    </tr>
  <% end %>
</table>
